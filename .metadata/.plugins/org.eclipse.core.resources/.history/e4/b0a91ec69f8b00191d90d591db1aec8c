apiVersion: v1
kind: NodePort
metadata:
  name: fortune-ui-service
  labels:
    name: fortune-ui-service
spec:
  ports:
    - port: 18080
      targetPort: 8080
  selector:
    name: fortune-ui
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: fortune-ui
  name: fortune-ui
spec:
  replicas: 1
  selector:
    matchLabels:
      name: fortune-ui
  template:
    metadata:
      labels:
        name: fortune-ui
    spec:
      containers:
        - image: kathywan/fortune-ui
          name: fortune-ui
          ports:
            - containerPort: 8080
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: fortune-ui-config
data:
  application.properties: |-
    fortune.fallbackFortune=Today is your lucky day! I'm from config map